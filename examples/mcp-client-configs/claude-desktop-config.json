{
  "mcpServers": {
    "emacs": {
      "command": "socat",
      "args": [
        "-",
        "UNIX-CONNECT:~/.emacs.d/.local/cache/emacs-mcp-server-primary.sock"
      ],
      "transport": "stdio"
    }
  }
}

// Alternative using the shell wrapper script (recommended):
{
  "mcpServers": {
    "emacs": {
      "command": "/path/to/mcp-wrapper.sh",
      "args": ["~/.emacs.d/.local/cache/emacs-mcp-server-primary.sock"],
      "transport": "stdio"
    }
  }
}

// Alternative using the Python wrapper script:
{
  "mcpServers": {
    "emacs": {
      "command": "python3",
      "args": [
        "/path/to/mcp-wrapper.py",
        "~/.emacs.d/.local/cache/emacs-mcp-server-primary.sock"
      ],
      "transport": "stdio"
    }
  }
}

// Custom socket location example:
{
  "mcpServers": {
    "emacs": {
      "command": "/path/to/mcp-wrapper.sh",
      "args": ["/custom/path/emacs-mcp-server-myinstance.sock"],
      "transport": "stdio"
    }
  }
}