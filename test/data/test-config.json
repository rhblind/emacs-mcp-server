{
  "test_configurations": {
    "minimal_server": {
      "debug": false,
      "socket_name": "test-minimal",
      "socket_directory": "/tmp/mcp-test/",
      "conflict_resolution": "auto",
      "security": {
        "prompt_for_permissions": false,
        "allowed_dangerous_functions": [],
        "max_execution_time": 10
      }
    },
    "debug_server": {
      "debug": true,
      "socket_name": "test-debug",
      "socket_directory": "/tmp/mcp-test/",
      "conflict_resolution": "warn",
      "security": {
        "prompt_for_permissions": true,
        "allowed_dangerous_functions": ["message"],
        "max_execution_time": 30
      }
    },
    "secure_server": {
      "debug": false,
      "socket_name": "test-secure",
      "socket_directory": "/tmp/mcp-test/",
      "conflict_resolution": "error",
      "security": {
        "prompt_for_permissions": true,
        "allowed_dangerous_functions": [],
        "max_execution_time": 5,
        "sensitive_file_patterns": [
          "*.key",
          "*.pem",
          "*password*",
          "*secret*"
        ]
      }
    }
  },
  "client_configurations": {
    "basic_client": {
      "name": "test-client",
      "version": "1.0.0",
      "capabilities": {
        "tools": {
          "listChanged": true
        }
      }
    },
    "advanced_client": {
      "name": "advanced-client",
      "version": "2.0.0",
      "capabilities": {
        "tools": {
          "listChanged": true
        },
        "resources": {
          "subscribe": true,
          "listChanged": true
        },
        "prompts": {
          "listChanged": true
        }
      }
    }
  },
  "transport_configurations": {
    "unix_socket": {
      "type": "unix",
      "socket_path": "/tmp/mcp-test/test.sock",
      "cleanup_on_exit": true
    },
    "tcp_socket": {
      "type": "tcp",
      "host": "localhost",
      "port": 8080,
      "timeout": 30
    }
  }
}